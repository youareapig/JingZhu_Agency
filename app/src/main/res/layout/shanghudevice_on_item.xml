<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:layout_marginLeft="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/index_frame"
    android:elevation="@dimen/dp_3"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/seller_icon_01" />

            <TextView
                android:id="@+id/deviceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="JZCB0191000288"
                android:textColor="#363636"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/details_icon02" />

            <TextView
                android:id="@+id/lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:singleLine="true"
                android:text="经纬度：30.68852,103.994086"
                android:textColor="#363636"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/details_icon02" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:singleLine="true"
                android:text="四川省武侯区兆信国际2-201"
                android:textColor="#363636"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center_vertical"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/cao_count"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/cao_jianbian"
            android:gravity="center"
            android:text="6槽"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1元/小时"
            android:textColor="#363636"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="2,0085.96"
            android:textColor="#E98F36"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="累计收益(元)"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
</LinearLayout>
