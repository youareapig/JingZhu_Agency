<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/offline_frame_index"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_13"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:src="@mipmap/shop_orange_icon" />

        <TextView
            android:id="@+id/item_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_29"
            android:text="兵哥豌豆面（红牌楼店）"
            android:textColor="#363636"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#363636"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_9"
            android:text="184 0368 7786"
            android:textColor="#363636"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/offline_frame_index_bottom"
        android:elevation="@dimen/dp_1" />
</LinearLayout>
