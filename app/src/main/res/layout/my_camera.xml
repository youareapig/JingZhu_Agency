<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_corner_length="@dimen/dp_14"
        app:inner_corner_width="@dimen/dp_2"
        app:inner_scan_iscircle="true"
        app:inner_margintop="@dimen/dp_140"
        app:inner_width="@dimen/dp_254"
        app:inner_height="@dimen/dp_254"
        android:layout_centerInParent="true"
        app:inner_scan_speed="20"
        app:inner_corner_color="@color/appbar" />

</RelativeLayout>